.container {
  padding: 20rpx;
}
.container .coin {
  padding: 30rpx 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  background: #f7f6fb;
}
.container .coin .name {
  width: 50%;
}
.container .coin .select {
  width: 50%;
  text-align: right;
}
.container .box {
  padding: 40rpx 20rpx;
  background: #f7f6fb;
  text-align: center;
  margin-top: 30rpx;
}
.container .box .qrcode {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
}
.container .box .save {
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: 30rpx auto;
  background: #e9f0f8;
  border: 1rpx solid #b5d5ec;
  border-radius: 6rpx;
  color: #1883d5;
}
.container .t {
  color: #909399;
}
.container .box .hash {
  color: #303133;
}
.container .box .copy {
  width: 150rpx;
  padding: 10rpx 0;
  background: #e7ebee;
  text-align: center;
  border-radius: 4rpx;
  margin: 30rpx auto;
}
.container .tip {
  display: block;
  margin: 40rpx 0;
}

